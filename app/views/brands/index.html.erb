<div class="container">
  <div class="row mt-4 mb-4">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="card ">
        <div class="card-header bg-primary text-white text-center">
          <h3><%= t "base.brands" %></h3>
        </div>
        <% if @brands.blank? %>
          <div class="card-body text-danger">
            <h4><%= t "brands.empty_brands" %></h4>
          </div>
        <% else %>
          <div class="card-body">
            <%= link_to t("base.new"), "#", class: "btn btn-outline-primary" %>
            <table class="table table-bordered mt-3">
              <thead class=" bg-primary">
                <tr class="align-middle text-center text-white">
                  <th><%= t "base.index" %></th>
                  <th><%= t "base.name" %></th>
                  <th><%= t "base.action" %></th>
                </tr>
              </thead>
              <tbody>
                <% @brands.each_with_index do |f, index| %>
                  <tr class="align-middle text-center">
                    <td><%= create_index params[:page], index, @per_page %></td>
                    <td><%= f.name %></td>
                    <td>
                      <form class="frm_delete" action="#" method="post">
                        <div class="m-t-10">
                          <a href="#"><span class="fas fs-25 fa-edit"></span></a>
                          <a class="btn_delete m-l-2" href="#" id=""><span class="fas fs-25 fa-trash-alt text-danger"></span>
                          </a>
                        </div>
                      </form>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-2 ml-4">
    <%= paginate @brands %>
  </div>
</div>
