<div class="wrap">
  <div class="content">
    <div class="content-grids mt-3">
      <h2 class="text-primary"><%= @brand.name %></h2>
      <div class="row">
        <% if @results.blank? %>
          <h4 class="text-danger"><%= t ".none_product"%></h4>
        <% else %>
          <% @results.in_groups_of(4, false).each do |group|%>
            <div class="section group">
              <% group.each do |product| %>
                <div class="grid_1_of_4 images_1_of_4 products-info">
                  <% if product.image.attached? %>
                    <%= image_tag product.display_image, width: "100%", height: "150" %>
                  <% else %>
                    <%= image_tag "customer/tivi15.jpg", width: "100%", height: "150" %>
                  <% end %>
                  <%= link_to product.name, product %>
                  <h3><%= number_to_currency(product.price) %></h3>
                  <div class="mt-3">
                    <p class="btn btn-danger">
                      <%= link_to t("base.add_cart"), "#" %>
                    <p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mt-2 ml-4">
        <%= paginate @results %>
      </div>
    </div>
    <%= render "layouts/right_menu"%>
  </div>
  <div class="clear"></div>
</div>
