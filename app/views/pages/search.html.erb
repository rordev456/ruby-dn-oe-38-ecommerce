
<div class="container">
  <h4><%= t ".result" %> <b><%= params[:search] %></b>:
  <%= @count_results.count %> <%= t(".content")%></h4>
  <% @results.in_groups_of(4, false).each do |group|%>
    <div class="row">
      <% group.each do |product| %>
        <div class="grid_1_of_4 images_1_of_4 products-info">
          <%= image_tag product.display_image, size: "220x170" if product.image.attached? %>
          <%= link_to product.name, product %>
          <h3><%= number_to_currency(product.price) %></h3>
          <div class="mt-3">
            <p class="btn btn-danger">
              <%= link_to t(".cart"), "#" %>
            <p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="mt-2 ml-4">
    <%= paginate @results %>
  </div>
</div>
