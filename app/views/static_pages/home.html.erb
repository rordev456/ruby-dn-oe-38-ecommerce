<%= render "layouts/slidebar"%>
<div class="clear"></div>
<div class="wrap">
  <div class="content">
    <%= render "layouts/top"%>
    <div class="content-grids mt-3">
      <h4 class="text-danger"><%= t ".new_products" %></h4>
      <div class="row">
        <% @new_products.in_groups_of(4, false).each do |group|%>
          <div class="section group">
            <% group.each do |product| %>
              <div class="grid_1_of_4 images_1_of_4 products-info">
                <%= image_tag product.display_image, size: "197x150" if product.image.attached? %>
                <%= link_to product.name, product %>
                <h3><%= number_to_currency(product.price) %></h3>
                <div class="mt-3">
                  <p class="btn btn-danger">
                    <%= link_to t("base.add_cart"), "#" %>
                  <p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "layouts/right_menu"%>
  </div>
  <div class="clear"></div>
</div>
